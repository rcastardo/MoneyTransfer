{
    "require": {
        "php": "7.4.*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.1",
        "php-di/slim-bridge": "^3.0",
        "firebase/php-jwt": "^5.0",
        "middlewares/trailing-slash": "^1.1",
        "symfony/polyfill-intl-grapheme": "^1.18",
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "guzzlehttp/psr7": "^1.6",
        "http-interop/http-factory-guzzle": "^1.0",
        "laminas/laminas-diactoros": "^2.3",
        "hybridauth/hybridauth" : "~3.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "mockery/mockery": "^1.2",
        "kint-php/kint": "^3.3",
        "squizlabs/php_codesniffer": "^3.4",
        "phan/phan": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "MoneyTransfer\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "server": "php -S localhost:8001 -t public public/index.php",
        "test": "./vendor/bin/phpunit tests/",
        "phpcs": "./vendor/bin/phpcs --standard=PSR12 app/",
        "phan": "./vendor/bin/phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@phpcs",
            "@test"
        ],
        "post-install-cmd": [
            "@check"
        ],
        "post-update-cmd": [

        ]
    },
    "scripts-descriptions": {
        "check": "Validate code. PHAN, PHPCS e PHPUNIT"
    }
}
